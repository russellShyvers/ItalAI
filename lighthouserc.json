{
  "ci": {
    "collect": {
      "startServerCommand": "bundle exec jekyll build && bundle exec jekyll serve --port 4000",
      "startServerReadyPattern": "Server running...",
      "startServerReadyTimeout": 120000,
      "url": [
        "http://localhost:4000/insights/mamba-beyond/",
        "http://localhost:4000/insights/mamba-intro/",
        "http://localhost:4000/insights/mamba-stateof/",
        "http://localhost:4000/insights/blogging/",
        "http://localhost:4000/about/",
        "http://localhost:4000/",
        "http://localhost:4000/insights/",
        "http://localhost:4000/roadmap/",
        "http://localhost:4000/work/"
      ],
      "numberOfRuns": 10,
      "settings": {
        "chromeFlags": "--headless --no-sandbox --disable-gpu"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended"
    },
    "upload": {
        "target": "filesystem",
        "outputDir": "./lighthouse-reports",
        "reportFilenamePattern": "%%PATHNAME%%-%%DATETIME%%.report.json"
    }
  }
}